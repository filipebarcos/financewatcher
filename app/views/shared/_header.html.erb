<header>
	<% if logged_in? %>
		<p>
			<%= t("helper.user.greeting", :name => current_user.name) %>
		</p>
	<% end %>

	<nav>
    	<ul>
			<li class="signup"><%= link_to t("nav.signup"), signup_path %></li>
			<% if logged_in? %>
				<li class="logout"><%= link_to t("nav.logout"), logout_path, :class => "button" %></li>
			<% else %>
      			<li class="login"><%= link_to t("nav.login"), login_path %></li>
			<% end %>
    	</ul>
	</nav>
</header>